generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  Admin
  User
}

model tb_user {
  id           Int              @id @default(autoincrement())
  name         String
  email        String           @unique
  password     String
  notelp       String
  role         Role             @default(User)
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt

  lostReports   tb_lostReport[]
  refreshToken  tb_refreshToken[]
}

model tb_refreshToken {
  id          Int         @id @default(autoincrement())
  token       String      @unique
  user        tb_user     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      Int
  expiresAt   DateTime
  createdAt   DateTime    @default(now())
}

model tb_lostReport {
  id            Int              @id @default(autoincrement())
  namaBarang    String
  deskripsi     String
  lokasiHilang  String
  imageUrl      String?
  status        LostStatus       @default(PENDING)
  createdAt     DateTime         @default(now())

  user          tb_user          @relation(fields: [userId], references: [id])
  userId        Int

  // one-to-one relationship
  foundReport   tb_foundReports? @relation("LostFoundRelation")
}

model tb_foundReports {
  id            Int                @id @default(autoincrement())
  namaBarang    String
  deskripsi     String
  lokasiTemu    String
  imageUrl      String?
  createdAt     DateTime           @default(now())

  statusFound   FoundStatus        @default(PENDING)

  // one-to-one relationship
  lostReport    tb_lostReport?     @relation("LostFoundRelation", fields: [lostReportId], references: [id])
  lostReportId  Int?               @unique
}

enum FoundStatus {
  PENDING
  CLAIMED
  REJECTED
}

enum LostStatus {
  PENDING
  APPROVED
  REJECTED
}
