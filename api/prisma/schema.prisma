generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  Admin
  User
}

enum FoundStatus {
  PENDING
  CLAIMED
  REJECTED
}

enum LostStatus {
  PENDING
  APPROVED
  REJECTED
}

model tb_user {
  id           Int              @id @default(autoincrement())
  name         String
  email        String           @unique
  password     String
  notelp       String
  role         Role             @default(User)
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt

  lostReports  tb_lostReport[]
  accessToken  tb_accessToken[]
  refreshToken tb_refreshToken[]
  foundReports tb_foundReports[] // relasi jika admin buat laporan
}

model tb_accessToken {
  id        Int       @id @default(autoincrement())
  token     String    @unique
  user      tb_user   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int
  expiresAt DateTime
  createdAt DateTime  @default(now())
}

model tb_refreshToken {
  id        Int       @id @default(autoincrement())
  token     String    @unique
  user      tb_user   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int
  expiresAt DateTime
  createdAt DateTime  @default(now())
}

model tb_lostReport {
  id            Int              @id @default(autoincrement())
  namaBarang    String
  deskripsi     String
  lokasiHilang  String
  imageUrl      String?
  status        LostStatus       @default(PENDING)
  createdAt     DateTime         @default(now())

  user          tb_user          @relation(fields: [userId], references: [id])
  userId        Int

  foundReport   tb_foundReports? @relation("LostFoundRelation")
}

model tb_foundReports {
  id             Int             @id @default(autoincrement())
  namaBarang     String
  deskripsi      String
  lokasiTemu     String
  imageUrl       String?
  imagePublicId  String?
  createdAt      DateTime        @default(now())

  statusFound    FoundStatus     @default(PENDING)
  createdByAdmin Boolean         @default(false)

  adminId        Int?            // relasi admin pembuat laporan
  admin          tb_user?        @relation(fields: [adminId], references: [id])

  // one-to-one relationship dengan lost report
  lostReportId   Int?            @unique
  lostReport     tb_lostReport?  @relation("LostFoundRelation", fields: [lostReportId], references: [id])
}
